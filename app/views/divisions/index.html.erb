<p id="notice"><%= notice %></p>

<h1>Divisions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @federation.divisions.each do |division| %>
      <tr>
        <td><%= division.name %></td>
        <td><%= link_to 'Show', federation_division_path(federation_id: @federation, id: division.id) %></td>
        <td><%= link_to 'Edit', edit_federation_division_path(federation_id: @federation, id: division.id) %></td>
        <td><%= link_to 'Destroy', federation_division_path(id: division), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Division', new_federation_division_path(@federation) %>
